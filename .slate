config defaultToCurrentScreen true
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config checkDefaultsOnLoad true

layout 1-monitor 'Google Chrome' throw 0 resize
layout 2-monitors 'Google Chrome' throw 1 resize

default 1-monitors count:1
default 2-monitors count:2

bind 1:cmd focus 'iTerm'
bind 2:cmd focus 'Emacs'
bind 3:cmd focus 'Google Chrome'

bind up:cmd push up bar-resize:screenSizeY
bind left:cmd push left bar-resize:screenSizeX/2
bind right:cmd push right bar-resize:screenSizeX/2


bind 0:cmd relaunch

bind e:cmd hint
bind esc:cmd grid