include "linux109.mayu" 
keymap Global

key *Eisuu = *Escape

mod mod0 = Henkan
# mod mod1 = Muhenkan

mod shift += !!!Space
def option delay-of !!! = 2

mod control += !Hiragana
mod windows += Muhenkan


key M0-*P = *Up
key M0-*N = *Down
key M0-*B = *Left
key M0-*F = *Right
# key M0-*J = *Return
key M0-*M = *Return
# key M0-*G = *Esc
key M0-*D = *Delete
key M0-*H = *BackSpace
key M0-*U = *PageUp
# key M0-*D = *PageDown
key M0-*A = *Home
key M0-*E = *End

key M0-OpenBracket = W-S-Tab
key M0-CloseBracket = W-Tab
key M0-*_0 = W-*_0
key M0-*_1 = W-*_1
key M0-*_2 = W-*_2
key M0-*_3 = W-*_3
key M0-*_4 = W-*_4
key M0-*_5 = W-*_5
key M0-*_6 = W-*_6
key M0-*_7 = W-*_7
key M0-*_8 = W-*_8
key M0-*_9 = W-*_9

key M0-*Atmark = A-*Kanji
key M0-*Tab = W-*Right
key M0-Q = W-S-Q

key M0-R = C-R
key M0-K = C-K
key M0-C = S-C-C
key M0-V = S-C-V
key M0-Left = S-C-Left
key M0-Right = S-C-Right
key M0-Up = S-C-Up
key M0-Down = S-C-Down

