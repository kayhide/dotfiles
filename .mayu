include "linux109.mayu" 
keymap Global

key *Eisuu = *Escape

mod mod0 = Henkan
# mod mod1 = Muhenkan

mod shift += !!!Space
def option delay-of !!! = 2

mod control += !Hiragana
mod windows += !Muhenkan

def key VolumeMute = 0x71
def key VolumeDown = 0x72
def key VolumeUp = 0x73
def key MediaPrev = 0xa5
def key MediaPlay = 0xa4
def key MedirNext = 0xa3
def key Search = 0xd9

key M0-*P = *Up
key M0-*N = *Down
key M0-*B = *Left
key M0-*F = *Right
# key M0-*J = *Return
key M0-*M = *Return
# key M0-*G = *Esc
key M0-*D = *Delete
key M0-*H = *BackSpace
key M0-*I = *PageUp
key M0-*U = *PageDown
key M0-*A = *Home
key M0-*E = *End

key M0-OpenBracket = C-S-Tab
key M0-CloseBracket = C-Tab
key M0-*_0 = W-*_0
key M0-*_1 = W-*_1
key M0-*_2 = W-*_2
key M0-*_3 = W-*_3
key M0-*_4 = W-*_4
key M0-*_5 = W-*_5
key M0-*_6 = W-*_6
key M0-*_7 = W-*_7
key M0-*_8 = W-*_8
key M0-*_9 = W-*_9

key M0-*Atmark = A-*Kanji
key M0-*Tab = C-*Tab

key M0-K = C-K
key M0-Q = C-Q
key M0-R = C-R
key M0-C = S-C-C
key M0-V = S-C-V
key M0-Left = S-C-Left
key M0-Right = S-C-Right
key M0-Up = S-C-Up
key M0-Down = S-C-Down

