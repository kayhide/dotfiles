[user]
	name = kayhide
	email = kayhide@gmail.com
[color]
	ui = true
[core]
	pager = lv -c
	eol = native
	autocrlf = true
	quotepath = false
	excludesfile = ~/.gitignore
[push]
	default = simple
[pager]
	log = diff-highlight | lv -c
	show = diff-highlight | lv -c
	diff = diff-highlight | lv -c

[credential]

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[fetch]
	prune = true
